{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "incremental": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    //    "importHelpers": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules",
    "src/*_test.ts",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
